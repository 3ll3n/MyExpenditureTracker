<div class="content_container">
<h2>Edit a Transaction</h2>

<form action="/transactions/<%= @transaction.id %>" method="post">
  <label>
    Merchant Id:
    <input type="number" name="merchant_id" value="<%= @transaction.id %>">
  </label>

  <label>
  Category Id:
    <input type="number" name="tag_id" value="<%= @transaction.tag_id %>">
  </label>

  <label>
    Value:
    <input type="number" name="value" value="&pound;<%= sprintf("%#.2f", @transaction.value) %>">
  </label>

  <input type='submit' value="Update">
</form>
</div>